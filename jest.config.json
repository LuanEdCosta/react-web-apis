{
  "clearMocks": true,
  "collectCoverage": true,
  "preset": "ts-jest",
  "coverageProvider": "v8",
  "testEnvironment": "jsdom",
  "coverageDirectory": "coverage",
  "setupFilesAfterEnv": ["<rootDir>/setupTests.ts"],
  "moduleDirectories": ["node_modules", "<rootDir>/node_modules", "."],
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/$1"
  }
}
